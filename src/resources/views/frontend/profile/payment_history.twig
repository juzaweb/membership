<div class="row">
    <table class="table table-hover table-striped text-center">
    <thead>
        <tr>
        <th scope="col"></th>
        <th scope="col ">Plan name</th>
        <th scope="col">Amount</th>
        <th scope="col">Status</th>
        <th scope="col">Agreement</th>
        <th scope="col">Created at</th>
        </tr>
    </thead>
    <tbody>
        {% for index,paymentHistory in paymentHistories %}
            <tr>
                <th scope="row">{{ index + 1 }}</th>
                <td>{{ paymentHistory.plan.name }}</td>
                <td>{{ paymentHistory.amount }}</td>
                <td>{% if paymentHistory.status == 'active' %} Success {% else %} Pending {% endif %}</td>
                <td>{{ paymentHistory.agreement_id }}</td>
                <td>{{ paymentHistory.created_at }}</td>
            </tr>
        {% endfor %}
    </tbody>
    </table>
</div>
